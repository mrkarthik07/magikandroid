<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlg_show_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rad_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rad_mWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Monitoreo web" />

        <RadioButton
            android:id="@+id/rad_mFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoreo de archivos" />

        <RadioButton
            android:id="@+id/rad_mAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoreo de actividades" />

    </RadioGroup>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.magik.mundo.pdf.PDFReader
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </com.magik.mundo.pdf.PDFReader>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    <TextView
        android:id="@+id/txtMove"
        android:layout_width="65dp"
        android:layout_height="111dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/diminuto" />

    <TextView
        android:id="@+id/txtVerb"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_gravity="right|bottom"
        android:layout_row="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/diminuto" />    
        
    </GridLayout>

    <LinearLayout
        android:id="@+id/bar_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="false" >

        </LinearLayout>

    <LinearLayout
        android:id="@+id/bar_cmd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >        

        <Button
            android:id="@+id/btnRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendaciones" />        

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bar_cmd" >
    </LinearLayout>

    <com.radaee.reader.PDFThumbView
        android:id="@+id/thumbs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bar_find" />

</RelativeLayout>